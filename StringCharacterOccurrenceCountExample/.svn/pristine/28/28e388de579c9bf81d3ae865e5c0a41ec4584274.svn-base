public class StringCharacterOccurrenceCountApp {
    public static int countOccurrence(String word) {
	char[] wordArray = word.toCharArray();
	int count = 0;
	for (char ch : wordArray) {
	    if (ch == 'a') {
		count++;
	    }
	}
	return count;
    }

    public static int countCharacterOccurrence(String word) {
	int count = 0;
	for (int i = 0; i < word.length(); i++) {
	    if ('a' == word.charAt(i)) {
		count++;
	    }
	}
	return count;
    }

}
